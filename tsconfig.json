{
  "compilerOptions": {
    // THIS DETERMINES WHICH JS VERSION THE COMPILATION RESULT WILL BE CONVERTED TO.
    "target": "ES2017",
    // SPECIFIES WHICH ENVIRONMENT APIs WILL BE RECOGNIZED BY TYPESCRIPT.
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    // ALLOWS INCLUDING .JS FILES IN THE COMPILATION PROCESS.
    "allowJs": true,
    // SKIPS TYPE CHECKING OF DECLARATION FILES (.D.TS) INSIDE NODE_MODULES.
    "skipLibCheck": true,
    // IT ACTIVATES ALL STRICT TYPE-CHECKING OPTIONS.
    "strict": true,
    // (IF TRUE) TYPESCRIPT ONLY PERFORMS TYPE CHECKING AND DOES NOT OUTPUT ANY JAVASCRIPT FILES.
    "noEmit": true,
    //IT ENABLES TO USE OF COMMONJS MODULES WITH THE IMPORT SYNTAX
    "esModuleInterop": true,
    //
    "module": "esnext",
    //
    "moduleResolution": "bundler",
    //
    "resolveJsonModule": true,
    //
    "isolatedModules": true,
    //
    "jsx": "react-jsx",
    //
    "incremental": true,
    // THIS TWO OPTIONS ENABLE DECORATOR SUPPORT IN TYPESCRIPT FOR INVERSIFY
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  // INCLUDE ONLY COMPILES .TS FILES LOCATED IN THE SPECIFIED LOCATIONS HERE.
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/api/auth/[...all]/route.ts",
    ".next/dev/types/**/*.ts"
, "postcss.config.mjs"  ],
  "exclude": [
    "node_modules"
  ]
  // THE EXCLUDE OPTION SPECIFIES FILES AND DIRECTORIES TO BE IGNORED DURING THE COMPILATION PROCESS.
}


