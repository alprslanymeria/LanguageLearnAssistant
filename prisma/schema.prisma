generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model User {
  id                      String          @id @default(cuid())
  name                    String?
  email                   String          @unique
  emailVerified           DateTime?
  password                String?
  nativeLanguageId        Int?    @default(2)
  image                   String?
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt

  //REFERANS VERDİKLERİ
  liveSession             LiveSession?
  flashcards              Flashcard[]
  listenings              Listening[]
  writings                Writing[]
  readings                Reading[]
  accounts                Account[]
  sessions                Session[]
  Authenticator           Authenticator[]

  //REFERANS ALDIKLARI
  language                Language? @relation(fields: [nativeLanguageId], references: [id])
}

model Account {
  userId                String
  type                  String
  provider              String
  providerAccountId     String
  refresh_token         String? @db.Text
  access_token          String? @db.Text
  expires_at            Int?
  token_type            String?
  scope                 String?
  id_token              String? @db.Text
  session_state         String?
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
 
  //REFERANS ALDIKLARI
  user                  User @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  @@id([provider, providerAccountId])
}

model Session {
  sessionToken          String   @unique
  userId                String
  expires               DateTime
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  //REFERANS ALDIKLARI
  user                  User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
 
model VerificationToken {
  identifier            String
  token                 String
  expires               DateTime
 
  @@id([identifier, token])
}

// Optional for WebAuthn support
model Authenticator {
  credentialID          String  @unique
  userId                String
  providerAccountId     String
  credentialPublicKey   String
  counter               Int
  credentialDeviceType  String
  credentialBackedUp    Boolean
  transports            String?
 
  //REFERANS ALDIKLARI
  user                  User @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  @@id([userId, credentialID])
}

model Language {

  id                    Int @id @default(autoincrement())
  name                  String
  imageUrl              String

  //REFERANS VERDİKLERİ
  practices             Practice[]
  flashcards            Flashcard[]
  listenings            Listening[]
  writings              Writing[]
  readings              Reading[]
  user                  User[]

}

model Practice {

  id                    Int @id @default(autoincrement())
  languageId            Int
  name                  String

  //REFERANS VERDİKLERİ
  flashcards            Flashcard[]
  listenings            Listening[]
  writings              Writing[]
  readings              Reading[]

  //REFERANS ALDIKLARI
  language              Language @relation(fields: [languageId], references: [id])

}

model LiveSession {

  liveSessionId         String @id
  userId                String @unique

  //REFERANS ALDIKLARI
  user                  User @relation(fields: [userId], references: [id])
}

model Flashcard {

  id                    Int @id @default(autoincrement())
  userId                String
  languageId            Int
  practiceId            Int

  //REFERANS ALDIKLARI
  user                  User @relation(fields: [userId], references: [id])
  language              Language @relation(fields: [languageId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  practice              Practice @relation(fields: [practiceId], references: [id], onDelete: NoAction, onUpdate: NoAction )

  //REFERANS VERDİKLERİ
  flashcardCategories   FlashcardCategory[]
  flashcardOldSessions  FlashcardOldSession[]
}

model FlashcardCategory {

  id                    Int @id @default(autoincrement())
  flashcardId           Int
  name                  String

  //REFERANS ALDIKLARI
  flashcard             Flashcard @relation(fields: [flashcardId], references: [id])

  //REFERANS VERDİKLERİ
  flashcardOldSessions  FlashcardOldSession[]
  deckWords             DeckWord[]

}

model FlashcardOldSession {

  oldSessionId          String @id
  flashcardId           Int
  categoryId            Int
  rate                  Decimal
  createdAt             DateTime @default(now())

  //REFERANS ALDIKLARI
  flashcard             Flashcard @relation(fields: [flashcardId], references: [id])
  category              FlashcardCategory @relation(fields: [categoryId], references: [id], onDelete: NoAction, onUpdate: NoAction)

  //REFERANS VERDİKLERİ
  flashcardSessionRows   FlashcardSessionRow[]
}


model DeckWord {
  
  id                    Int @id @default(autoincrement())
  categoryId            Int
  question              String
  answer                String

  //REFERANS ALDIKLARI
  category              FlashcardCategory @relation(fields: [categoryId], references: [id])
  
}

model FlashcardSessionRow {

  id                    Int @id @default(autoincrement())
  oldSessionId          String
  question              String
  answer                String
  status                Boolean

  //REFERANS ALDIKLARI
  oldSession            FlashcardOldSession @relation(fields: [oldSessionId], references: [oldSessionId])
}


model Listening {

  id                    Int @id @default(autoincrement())
  userId                String
  languageId            Int
  practiceId            Int

  //REFERANS ALDIKLARI
  user                  User @relation(fields: [userId], references: [id])
  language              Language @relation(fields: [languageId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  practice              Practice @relation(fields: [practiceId], references: [id], onDelete: NoAction, onUpdate: NoAction)

  //REFERANS VERDİKLERİ
  listeningFilms        ListeningFilm[]
  listeningOldSessions  ListeningOldSession[]
}

model ListeningFilm {

  id                    Int @id @default(autoincrement())
  listeningId           Int
  name                  String
  imageUrl              String
  sourceUrl             String
  strUrl                String?

  //REFERANS ALDIKLARI
  listening             Listening @relation(fields: [listeningId], references: [id])

  //REFERANS VERDİKLERİ
  listeningOldSessions  ListeningOldSession[]
}

model ListeningOldSession {

  oldSessionId          String @id
  listeningId           Int
  filmId                Int
  rate                  Decimal
  createdAt             DateTime @default(now())

  //REFERANS ALDIKLARI
  listening             Listening @relation(fields: [listeningId], references: [id])     
  film                  ListeningFilm @relation(fields: [filmId], references: [id], onDelete: NoAction, onUpdate: NoAction)

  //REFERANS VERDİKLERİ
  listeningSessionRows  ListeningSessionRow[]
}

model ListeningSessionRow {

  id                    Int @id @default(autoincrement())
  oldSessionId          String
  listenedSentence      String
  answer                String
  similarity            Decimal

  //REFERANS ALDIKLARI
  oldSession            ListeningOldSession @relation(fields: [oldSessionId], references: [oldSessionId])
}


model Writing {

  id                    Int @id @default(autoincrement())
  userId                String
  languageId            Int
  practiceId            Int

  //REFERANS ALDIKLARI
  user                  User @relation(fields: [userId], references: [id])
  language              Language @relation(fields: [languageId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  practice              Practice @relation(fields: [practiceId], references: [id], onDelete: NoAction, onUpdate: NoAction)

  //REFERANS VERDİKLERİ
  writingBooks          WritingBook[]
  writingOldSessions    WritingOldSession[]
}

model WritingBook {

  id                    Int @id @default(autoincrement())
  writingId             Int
  name                  String
  imageUrl              String
  leftColor             String
  sourceUrl             String

  //REFERANS ALDIKLARI
  writing               Writing @relation(fields: [writingId], references: [id])

  //REFERANS VERDİKLERİ
  writingOldSessions    WritingOldSession[]
}

model WritingOldSession {

  oldSessionId          String @id
  writingId             Int
  bookId                Int
  rate                  Decimal
  createdAt             DateTime @default(now())

  //REFERANS ALDIKLARI
  writing               Writing @relation(fields: [writingId], references: [id])
  book                  WritingBook @relation(fields: [bookId], references: [id], onDelete: NoAction, onUpdate: NoAction)

  //REFERANS VERDİKLERİ
  writingSessionRows    WritingSessionRow[]
}

model WritingSessionRow {

  id                    Int @id @default(autoincrement())
  oldSessionId          String
  selectedSentence      String
  answer                String
  answerTranslate       String
  similarity            Decimal

  //REFERANS ALDIKLARI
  oldSession            WritingOldSession @relation(fields: [oldSessionId], references: [oldSessionId])

}

model Reading {

  id                    Int @id @default(autoincrement())
  userId                String
  languageId            Int
  practiceId            Int

  //REFERANS ALDIKLARI
  user                  User @relation(fields: [userId], references: [id])
  language              Language @relation(fields: [languageId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  practice              Practice @relation(fields: [practiceId], references: [id], onDelete: NoAction, onUpdate: NoAction)

  //REFERANS VERDİKLERİ
  readingBooks          ReadingBook[]
  readingOldSessions    ReadingOldSession[]
}

model ReadingBook {

  id                    Int @id @default(autoincrement())
  readingId             Int
  name                  String
  imageUrl              String
  leftColor             String
  sourceUrl             String

  //REFERANS ALDIKLARI
  reading               Reading @relation(fields: [readingId], references: [id])

  //REFERANS VERDİKLERİ
  readingOldSessions    ReadingOldSession[]
}

model ReadingOldSession {
  
  oldSessionId          String @id
  readingId             Int
  bookId                Int
  rate                  Decimal
  createdAt             DateTime @default(now())

  //REFERANS ALDIKLARI
  reading               Reading @relation(fields: [readingId], references: [id])
  book                  ReadingBook @relation(fields: [bookId], references: [id], onDelete: NoAction, onUpdate: NoAction)

  //REFERANS VERDİKLERİ
  readingSessionRows    ReadingSessionRow[]
}

model ReadingSessionRow {

  id                    Int @id @default(autoincrement())
  oldSessionId          String
  selectedSentence      String
  answer                String
  answerTranslate       String
  similarity            Decimal

  //REFERANS ALDIKLARI
  oldSession            ReadingOldSession @relation(fields: [oldSessionId], references: [oldSessionId])
}